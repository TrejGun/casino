{
  "collectCoverageFrom": ["src/**/*.{js,jsx,ts,tsx}"],
  "coverageDirectory": "../coverage",
  "moduleFileExtensions": ["js", "jsx", "ts", "tsx", "json"],
  "rootDir": "client",
  "testEnvironment": "jsdom",
  "testRegex": ".test.tsx?$",
  "timers": "modern",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "verbose": true
}
